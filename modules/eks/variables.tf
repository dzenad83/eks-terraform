#==================================================================================================
# VPC ID
#==================================================================================================
variable "vpc-id" {
  type = string
}
#==================================================================================================
# VPC CIDR Block
#==================================================================================================
variable "vpc-cidr" {
  type = string
}
#==================================================================================================
# Private Subnet IDs
#==================================================================================================
variable "private-subnet-ids" {
  type    = list(string)
  default = []
}
#==================================================================================================
# Project Name
#==================================================================================================
variable "project-name" {
  type = string
}
#==================================================================================================
# Node Instance Type
#==================================================================================================
variable "node_instance_type" {
  type = string
}
#==================================================================================================
# EC2 Key Pair Name (.pem key)
#==================================================================================================
variable "ec2-key-pair-name" {
  type = string
}
#==================================================================================================
# ECR Retention policy - number of images kept
#==================================================================================================
variable "ecr-retention-num-of-images" {
  type = string
}
#==================================================================================================
# ECR Retention policy - number of images kept
#==================================================================================================
variable "kms-key" {
  type = string
}
